
@{
    ViewBag.Title = "Register";
}

<h2>Please Fill Out the Information Below</h2>




<form action="~/Home/RegSuccess">
    <div class="form-group">
        <label for="FirstName"></label>
        <input type="text" class="form-control" name="FirstName" placeholder="First Name">
    </div>
    <div class="form-group">
        <label for="LastName"></label>
        <input type="text" class="form-control" name="LastName" placeholder="Last Name">
    </div>
    <div class="form-group">
        <label for="Email"></label>
        <input type="email" class="form-control" name="Email" placeholder="Email Address">
    </div>
    <div class="form-group">
        <label for="Number"></label>
        <input type="tel" class="form-control" name="Number" placeholder="(123) 456-7890">
    </div>
    <div class="form-group">
        <label for="Password"></label>
        <input type="password" class="form-control" name="Password" placeholder="Choose a Password">
    </div>

    <button type="submit" class="btn btn-default">Submit</button>
</form>

